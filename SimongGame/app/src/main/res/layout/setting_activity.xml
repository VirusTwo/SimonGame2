<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/textView2"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:singleLine="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/textView3"
                android:id="@+id/textView3"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_marginLeft="20px" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10px"
            android:background="#FFFFFF"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:background="@drawable/pattern"
                android:id="@+id/btColor1"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:background="@drawable/pattern2"
                android:id="@+id/btColor2"
                android:paddingRight="50dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:background="@drawable/pattern3"
                android:id="@+id/btColor3" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/textViewlevel"
                android:id="@+id/txtVLvl"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_marginLeft="20px" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10px"
            android:background="#FFFFFF"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btLevel1"
                android:text="@string/btLevel1"
                android:textColor="#FAFF00"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btLevel2"
                android:id="@+id/btLevel2"
                android:textColor="#00FF00"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btLevel3"
                android:id="@+id/btLevel3"
                android:textColor="#FF0000"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/textView4"
                android:id="@+id/textView4"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_marginLeft="20px" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10px"
            android:background="#FFFFFF"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch1"
                android:id="@+id/switch1"
                android:textColor="#FFFFFF"
                android:paddingLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/textView5"
                android:id="@+id/textView5"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_marginLeft="20px" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10px"
            android:background="#FFFFFF"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/textView7"
                    android:id="@+id/textView7"
                    android:paddingTop="10dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="30dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/uk"
                    android:id="@+id/imgbtEnglish"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/textView6"
                    android:id="@+id/textView6"
                    android:textColor="#ffffff"
                    android:paddingTop="10dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imgbtFrench"
                    android:background="@drawable/france"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button4"
            android:id="@+id/btRetour"
            android:background="@drawable/bluecircle"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>